<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Meal:</div>
    <ul>
      <% flight.meal.forEach(mealMember => { %>
        <li><%= mealMember.name %></li>
      <% }) %>
    </ul>
    </section>
    <form id="add-per-to-meal" action="/flights/<%= flight._id %>/meals"method="POST">
      <select name="mealId">
        <% meals.forEach(meal => { %>
          <option value="<%= meal._id %>"><%= meal.name %></option>
        <% }) %>
      </select>
      <button type="submit">Add to Meal</button>
    </form>
    <h2>Tickets</h2>
      <form 
        action="/flights/<%= flight._id %>/tickets"
        id="add-ticket-form"
        method="post"
      >
        <label for="content-textarea">Seat:</label>
        <input name="seat" placeholder="[A-F][1-9]" required pattern="[A-F][1-9]\d?">
        <label for="price-select">Price:</label>
        <input type="number" name="price" required>
        <button type="submit">Add Ticket</button>
      </form>
      <% if (flight.tickets.length) { %>
        <table>
          <thead>
            <tr>
              <th>Seat</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% flight.tickets.forEach(function(ticket) { %>
              <tr>
                <td><%= ticket.seat %></td>
                <td><%= "$" + ticket.price %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h3>No Tickets Yet</h3>
      <% } %>
</main>
  
<%- include('../partials/footer') %>


